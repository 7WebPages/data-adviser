[program:{{ application_name }}]
command = {{ virtualenv_path }}/bin/gunicorn_start
user = {{ gunicorn_user }}
stdout_logfile = {{ application_log_file }}
redirect_stderr = true

[program:flower]
command = {{ virtualenv_path }}/bin/celery flower -A analytics --address=0.0.0.0 --port=5555 --broker=redis://localhost:6379/0
user = {{ gunicorn_user }}
directory = {{ project_path }}/src/{{ application_name }}
stdout_logfile = "{{ application_log_dir }}/flower_supervisor.log"
redirect_stderr = true